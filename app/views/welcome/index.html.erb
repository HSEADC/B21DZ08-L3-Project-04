<div class="S_IndexContent">
  <div class="O_Banners">
    <% random_posts = Post.order("RANDOM()").limit(1) %>
    <% random_posts.each do |post| %>
      <%= link_to post do %>
        <%= render partial: 'posts/banner', locals: { post: post, show_email: false } %>
      <% end %>
    <% end %>
  </div>
</div>
