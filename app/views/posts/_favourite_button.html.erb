<%
  post_user_ids = []

  post.users_who_favourited.each do |user|
    post_user_ids << user.id
  end
%>
<%= turbo_frame_tag dom_id(post), remote: true do %>
  <% link_class = post_user_ids.include?(current_user&.id) ? "Blue" : "Grey" %>
  <%= link_to 'любимое!', toggle_favourite_post_path(post), class: "A_Button #{link_class}", data: { turbo_frame: "preview" } %>
<% end %>