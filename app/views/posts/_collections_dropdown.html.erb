<turbo-frame class="O_AddToCollectionDropdown hidden" id="collectionsDropdown" data-controller="turbo-modal" data-dropdown-target="openedDropdown" data-action="mouseenter->dropdown#cancelClose mouseleave->dropdown#resumeClose">
  <div class="A_Heading3">Мои подборки</div>
  <div class="C_CollectionList" id="collections-list">
    <% @collections.each do |collection| %>
      <%= render partial: 'collections/collection_card', locals: { collection: collection, post: @post } %>
    <% end %>
  </div>
  <%= link_to new_collection_path(post_id: @post.id), data: { turbo_frame: 'modal'}, class: 'W_BigButton' do %>
    <div class="A_Button LightBlue">
      <div class="Q_Icon AddWhite"></div>
      <div class="A_Paragraph White">Создать новую подборку</div>
    </div>
  <% end %>
</turbo-frame>
