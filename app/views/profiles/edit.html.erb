<div class="M_EditForm">
  <div class="A_Heading1">
    ../Настройки
  </div>
  <%= form_with(model: @profile) do |form| %>
    <% if @profile.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% @profile.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
    
<div class="A_Heading3">Фотография профиля</div>
    <div class="M_ProfilePreview">
      <div class="A_Avatar">
      <% if current_user.profile.avatar.present? %>
        <%= image_tag current_user.profile.avatar.url, class: "A_Avatar" %>
      <% else %>
        <div class="A_Avatar NoImage"></div>
      <% end %>     
      </div> 
      <%= form.file_field :avatar, id: "avatar-input", class: "custom-file-input", accept: "image/*" %>
      <label for="avatar-input" class="A_Button Blue">Изменить аватар</label>
    </div>

    <div>
      <%= form.label :login, "Имя", class: "A_Heading3" %>
      <%= form.text_field :login, placeholder: "Гульнара Иванова", class: "A_Input" %>
    </div>
    <div>
     <div class="W_FormHeader">
       <%= form.label :username, "Никнейм", class: "A_Heading3" %>
       <div class="A_Paragraph Red">
       <%= form.object.errors[:username].first if form.object.errors[:username].any? %>
       </div>
     </div>
    <%= form.text_field :username, placeholder: "gulnara_ivanova", class: "A_Input" %>
    <div class="A_Paragraph Grey">Латиница, более 6 символов</div>
    


    </div>

    <div>
      <%= form.label :about, "Описание", class: "A_Heading3" %>
      <%= form.text_area :about, placeholder: "Расскажите, чем занимаетесь, каков Ваш профессиональный интерес", class: "A_Input" %>
    </div>

    <div>
      <%= form.submit "Сохранить изменения", class: "A_Button Blue" %>
    </div>
  <% end %>
</div>

<div class="W_Body">

  <%= form_for(current_user, url: registration_path(current_user), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: current_user %>

    <div class="W_InputsColumn">
      <div class="M_InputWithLabel">
        <%= f.label :email, "Email", class:"A_Heading3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Введите email", class: "A_Input" %>
      </div>

      <div class="M_InputWithLabel">
        <div class="W_InputLabel">
          <%= f.label :password, "Новый пароль", class:"A_Heading3" %> 
          <% if @minimum_password_length %>
            <p class="A_Paragraph Grey"><%= @minimum_password_length %> знаков минимум</p>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Введите новый пароль", class: "A_Input" %>
      </div>

      <div class="M_InputWithLabel">
        <%= f.label :password_confirmation, "Повторите новый пароль", class:"A_Heading3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Введите новый пароль еще раз", class: "A_Input" %>
      </div>

      <div class="M_InputWithLabel">
        <%= f.label :current_password, "Текущий пароль", class:"A_Heading3" %> 
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Введите текущий пароль", class: "A_Input" %>
      </div>
    </div>

    <div class="W_FormButton">
      <%= f.submit "Обновить", class:"A_Button Blue" %>
    </div>
  <% end %>

  <p class="A_Heading3">Удалить аккаунт</p>

  <div>Недовольны лутком? :( <%= button_to "Удалить аккаунт", registration_path(current_user), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены" }, method: :delete, class:"A_Button Black" %></div>
</div>