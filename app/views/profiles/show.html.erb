<div class="O_Account">
<div class="M_ProfileInfo">
<% if @profile.avatar? %>
  <%= image_tag @profile.avatar.url, class: "A_Icon"  %>
<% else %>
  <div></div>
<% end %>


<div class="W_ProfileInfo">

<div class="W_ProfileName">
<div class="A_Heading3">
<%= @profile.username%>
</div>
<div class="A_Paragraph Grey">
<%= @profile.login%>
</div>
<div class="A_Paragraph">
<%= @profile.about%>
</div>
</div>
</div>
  
</div><%=link_to "Редактировать", edit_profile_path(@profile), class: 'A_Button Blue'%></div>


<div class="O_Posts">
<div class="M_Switcher">
<p class="A_Link">Публикации</p>
<p class="A_Paragraph">Подборки</p>
<p class="A_Paragraph">Черновики</p>
</div>




<div class="W_Posts">
  <% @posts.each do |post| %>
    <%= link_to post do%>
      <%= render partial: 'posts/post-preview', locals: { post: post, show_email: false, } %>
    <% end %>
  <% end %>
</div>
</div>
