<div class="M_EditForm">
  <%= form_with(model: [:admin, attachment]) do |form| %>
    <% if attachment.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(attachment.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% attachment.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :type, style: "display: block" %>
      <%= form.text_field :type %>
    </div>

    <div>
      <%= form.label :url, style: "display: block" %>
      <%= form.text_field :url %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
