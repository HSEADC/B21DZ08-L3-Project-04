<div class="M_PostHeading">
    <p class="A_Heading1"><%= @collection.name %></p>
    <div class="W_AuthorAndDate">
      <div class="M_PostAuthor">
        <%= link_to profile_path(@collection.user.profile) do %>
          <% if @collection.user.profile.avatar.present? %>
              <%= image_tag @collection.user.profile.avatar.url, class: "A_Avatar" %>
          <% else %>
            <div class="A_Avatar NoImage"></div>
          <% end %> 
        <% end %> 
        <div class="W_NameAndNick">
          <div class="A_Paragraph Bold"><%= @collection.user.profile.username %></div>
          <div class="A_Paragraph Grey"><%= @collection.user.profile.login %></div>
        </div>
      </div>
      <div class="A_Paragraph"><%= formatted_date(@collection.created_at)%></div>
    </div>
    <div class="M_PostActions">
      <div class="W_ButtonGroup">
        <%#= render 'posts/favourite_button', post: post %>
        <%#= render 'posts/like_button', post: post %>
        <%#= render 'posts/add_to_collection_button', post: @collection %>
      </div>
    <div class="W_ButtonGroup">
        <%= render 'posts/share_button', post: @collection %>
        <%= render 'posts/more_button', post: @collection %>
    </div>
  </div>
</div>
<div class="O_Posts">
  <div class="W_Posts">
    <% @collection.posts.each do |post| %>
      <%= render 'posts/post-preview', post: post %>
    <% end %>
  </div>
</div>

<%# if current_user.saved_collections.include?(@collection) %>
  <%#= link_to 'Unsave Collection', collection_saved_collection_path(@collection), method: :delete %>
<%# else %>
  <%#= link_to 'Save Collection', collection_saved_collection_path(@collection), method: :post %>
<%# end %>

